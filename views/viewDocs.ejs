<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>


<style>
    table,
    th,
    td {
        border: 1px solid black;
        border-collapse: collapse;
        padding: 1em;
    }
</style>

<body>


    <table>
        <tr>
            <th>FullName</th>
            <th>JobTitle</th>
            <th>Phone No</th>
            <th>Email</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Actions</th>
        </tr>

        <% for (var i=0; i < data.length; i++) { %>
            <tr>
                <td>
                    <%= data[i].FullName %>
                </td>
                <td>
                    <%= data[i].JobTitle %>
                </td>
                <td>
                    <%= data[i].PhoneNo %>
                </td>
                <td>
                    <%= data[i].Email %>
                </td>
                <td>
                    <%= data[i].Address %>
                </td>
                <td>
                    <%= data[i].City %>
                </td>
                <td>
                    <%= data[i].State %>
                </td>
                <td>
                    <a href="/delete-employee?id=<%- data[i].id %>">Delete</a>
                    
                    <a href="/update-employee?id=<%- data[i].id %>">Update</a>
                </td>
            </tr>

            <% } %>

    </table>


    <div class="break"></div>

    <% if (page > 1) { %>
        <a href="/employees/?page=<%= page - 1 %>">Before</a>
      <% } %>
      
      <% for (let i = iterator; i <= ending; i++) { %>
        <% if (i === page) { %>
          <a href="/employees/?page=<%= i %>" class="selectLink"><%= i %></a>
          <% continue; %>
        <% } %>
      
        <a href="/employees/?page=<%= i %>"><%= i %></a>
      <% } %>
      
      <% if (page < numberOfPages) { %>
        <a href="/employees/?page=<%= page + 1 %>">After</a>
      <% } %>
      

</body>

</html>